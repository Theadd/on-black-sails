<div class="widget">
  <div class="widget-header">
    <i class="fa <%= targetIcon %>"></i> Service: <%= targetTitle %>
    <div class="btn-group btn-toggle pull-right" data-toggle="buttons">
      <label class="btn btn-default">
        <input name="<%= target %>" value="true" type="radio"> ON
      </label>
      <label class="btn btn-primary active">
        <input name="<%= target %>" value="false" checked="checked" type="radio"> OFF
      </label>
    </div>
    <div class="clearfix"></div>
  </div>
  <div class="widget-body narrow">

    <div class="form-group">
      <label for="label" class="col-sm-2 control-label">Host</label>
      <div class="col-sm-5">
        <input type="text" class="form-control" name="<%= target %>-host" value="localhost" />
      </div>
      <div class="col-sm-5">
        <div class="input-mask">localhost / FQDN / IP Address</div>
      </div>
    </div>
    <div class="form-group">
      <label for="label" class="col-sm-2 control-label">Port</label>
      <div class="col-sm-5">
        <input type="text" class="form-control" name="<%= target %>-port" value="8018" />
      </div>
      <div class="col-sm-5">
        <div class="input-mask">Integer</div>
      </div>
    </div>
    <div class="form-group">
      <label for="label" class="col-sm-2 control-label">Interval</label>
      <div class="col-sm-5">
        <input type="text" class="form-control" name="<%= target %>-interval" value="250" />
      </div>
      <div class="col-sm-5">
        <div class="input-mask">Integer (in milliseconds)</div>
      </div>
    </div>

    <hr />

    <div class="form-group">
      <label for="label" class="col-sm-2 control-label">Autoqueue Model</label>
      <div class="col-sm-5">
        <select class="selectpicker"
                name="<%= target %>-onempty"
                multiple>

          <% include queuemodels %>
        </select>
      </div>
      <div class="col-sm-5">
        <div class="input-mask"></div>
      </div>
    </div>

  </div>
</div>