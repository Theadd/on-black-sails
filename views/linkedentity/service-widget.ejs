<div class="widget">
  <div class="widget-header">
    <i class="fa <%= targetIcon %>"></i> Service: <%= targetTitle %>
    <div class="btn-group btn-toggle pull-right" data-toggle="buttons">
      <label class="btn <%= (values.active) ? 'btn-primary active' : 'btn-default' %>">
        <input name="<%= target %>" value="true" <%= (values.active) ? 'checked="checked"' : '' %> type="radio"> ON
      </label>
      <label class="btn <%= (!values.active) ? 'btn-primary active' : 'btn-default' %>">
        <input name="<%= target %>" value="false" <%= (!values.active) ? 'checked="checked"' : '' %> type="radio"> OFF
      </label>
    </div>
    <div class="clearfix"></div>
  </div>
  <div class="widget-body narrow">

    <div class="form-group">
      <label for="label" class="col-sm-2 control-label">Host (IPC)</label>
      <div class="col-sm-6">
        <input type="text" class="form-control" name="<%= target %>-host" value="<%= values.host %>" />
      </div>
      <div class="col-sm-4">
        <div class="input-mask">localhost / FQDN / IP Address</div>
      </div>
    </div>
    <div class="form-group">
      <label for="label" class="col-sm-2 control-label">Port (IPC)</label>
      <div class="col-sm-6">
        <input type="text" class="form-control" name="<%= target %>-port" value="<%= values.port %>" />
      </div>
      <div class="col-sm-4">
        <div class="input-mask">Integer</div>
      </div>
    </div>
    <div class="form-group">
      <label for="label" class="col-sm-2 control-label">Interval</label>
      <div class="col-sm-6">
        <input type="text" class="form-control" name="<%= target %>-interval" value="<%= values.interval %>" />
      </div>
      <div class="col-sm-4">
        <div class="input-mask">Integer (in milliseconds)</div>
      </div>
    </div>

    <hr />

    <div class="form-group">
      <label for="label" class="col-sm-2 control-label">Autoqueue Model</label>
      <select class="selectpicker col-sm-6"
              name="<%= target %>-onempty"
              multiple>

        <% selectfilters = { type: target, selected: selectedQueueModels } %>
        <% include ../selectpicker-queuemodels.ejs %>
      </select>
    </div>

  </div>
</div>