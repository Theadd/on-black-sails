
<% if(flash && (flash.err || flash.msg)) { %>
<div class="row">
  <div class="col-xs-12">

    <% if(flash && flash.err) { %>
    <% Object.keys(flash.err).forEach(function(error) { %>
    <div class="alert alert-danger" role="alert">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <%- flash.err[error].message %>
    </div>
    <% }) %>
    <% } %>

    <% if(flash && flash.msg) { %>
    <% Object.keys(flash.msg).forEach(function(msg) { %>
    <div class="alert alert-success" role="alert">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <%- flash.msg[msg].message %>
    </div>
    <% }) %>
    <% } %>

  </div>
</div>
<% } %>

<% if (linkedentity) { %>

<div class="row">

  <div class="col-lg-12">
    <div class="widget">
      <div class="widget-header">
        <i class="fa fa-info-circle"></i> <%= linkedentity.name %>
        <div class="clearfix"></div>
      </div>
      <div class="widget-body">
        <div id="linkedentity-detail-stats" data-id="<%= linkedentity.id %>">
          <h4 class="loading-content"><i class="fa fa-spinner fa-spin"></i> Requesting information...</h4>
        </div>
      </div>
    </div>
  </div>

</div>

<% if (linkedentity.config.propagate.agreement) { %>
<div class="row">

  <div class="col-lg-12">
    <div class="widget">
      <div class="widget-header">
        <div class="col-sm-4">
          <i class="fa fa-area-chart"></i> Statistics
        </div>
        <div class="col-sm-8" style="text-align: right;">
          <label for="label" class="control-label" style="margin-right: 15px;">Data Interval: </label>
          <nav class="pull-right" style="height: 15px;">
            <ul class="pagination pagination-sm dashboard-chart-level">
              <li class="active"><a href="#" data-level="1">10 min</a></li>
              <li class=""><a href="#" data-level="3">30 min</a></li>
              <li class=""><a href="#" data-level="6">1 hour</a></li>
              <li class=""><a href="#" data-level="144">1 day</a></li>
            </ul>
          </nav>


        </div>
        <div class="clearfix"></div>
      </div>
      <div class="widget-body">

        <div id="chart-container"
             data-agreement="<%= linkedentity.config.propagate.agreement %>"
             data-filter="<%= linkedentity.config.propagate.onempty %>"
             data-level="1"
             style="min-width: 310px; height: 400px; margin: 0 auto"></div>

      </div>
    </div>
  </div>

</div>
<% } %>

<% } %>

