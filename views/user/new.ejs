
<div class="row">

  <div class="col-lg-12">
    <div class="widget">
      <div class="widget-header">
        <i class="fa fa-plus"></i> Create account
        <div class="clearfix"></div>
      </div>
      <div class="widget-body">

        <div class="message">
          Fields starting with (*) are required.
        </div>

        <hr />

        <% if(flash && flash.err) { %>
          <% Object.keys(flash.err).forEach(function(error) { %>
        <div class="alert alert-danger" role="alert"><%- flash.err[error].message %></div>
          <% }) %>
        <hr />
        <% } %>

        <form class="form-horizontal" role="form" action="/user/create" method="POST" id="sign-up-form">

          <div class="form-group">
            <label for="label" class="col-sm-2 control-label">* Username</label>
            <div class="col-sm-5">
              <input type="text" class="form-control" name="name" placeholder="Your username" />
            </div>
            <div class="col-sm-5">
              <div class="input-mask">Allowed characters: a-Z, 0-9, spaces and: .-_!</div>
            </div>
          </div>

          <div class="form-group">
            <label for="label" class="col-sm-2 control-label">Title</label>
            <div class="col-sm-5">
              <input type="text" class="form-control" name="title" placeholder="Short description about who you are" />
            </div>
            <div class="col-sm-5">
              <div class="input-mask">Optional.<br />Limited to 128 characters</div>
            </div>
          </div>

          <div class="form-group">
            <label for="label" class="col-sm-2 control-label">* Email</label>
            <div class="col-sm-5">
              <input type="text" class="form-control" name="email" placeholder="Email address" />
            </div>
            <div class="col-sm-5">
              <div class="input-mask">Please check it twice!</div>
            </div>
          </div>

          <div class="form-group">
            <label for="label" class="col-sm-2 control-label">* Password</label>
            <div class="col-sm-5">
              <input type="password" class="form-control" name="password" placeholder="" id="password" />
            </div>
            <div class="col-sm-5">
              <div class="input-mask">At least 6 characters</div>
            </div>
          </div>

          <div class="form-group">
            <label for="label" class="col-sm-2 control-label">* Confirm password</label>
            <div class="col-sm-5">
              <input type="password" class="form-control" name="confirmation" placeholder="" />
            </div>
            <div class="col-sm-5">
              <div class="input-mask"></div>
            </div>
          </div>

          <input type="submit" class="btn btn-lg btn-primary btn-block" value="Create Account"/>
          <input type="hidden" name="_csrf" value="<%= _csrf %>" />

        </form>

      </div>
    </div>
  </div>

</div>
